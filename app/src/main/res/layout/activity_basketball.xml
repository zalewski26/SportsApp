<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarBB"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/toolbar_bb"
        android:minHeight="?attr/actionBarSize"

        android:paddingTop="6dp"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/basketball_menu"
        app:title="@string/logo_bb" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_bb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarBB"
        tools:layout_editor_absoluteX="0dp" />


    <Button
        android:id="@+id/BBDateButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:onClick="BBDateClick"
        android:textColor="@color/black"
        android:text="Date"
        android:fontFamily="@font/expressway_fam"
        android:background="@color/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>